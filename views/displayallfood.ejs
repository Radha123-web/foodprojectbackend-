<style>
  body {
    margin: 0;
    background-color: transparent !important; 
  }

  .maincontainer {
   
    width: 'auto';
    background-color: transparent !important; 
    height: 'auto';
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: "poppins";
    margin-top: 70
  }

  .box {
    width:'auto';
    height:'auto';
    background: #fff; 
    border-radius: 10px;
    padding: 15px;
    border: 1px solid grey;
  }

  .heading {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .headingstyle {
    margin-left: 10px;
    font-size: 18px;
    font-weight: bold;
  }

  .pic {
    width: 80px;
    height: 60px;
    border-radius: 10px;
  }

  .vpic {
    width: 15px;
    height: 15px;
    border-radius: 5px;
  }

  .addpic {
    width: 50px;
    height: 50px;
    border-radius: 10px;

  }
</style>

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

</head>
<html>

<body>
  <div class="maincontainer">
    <div class="box">
      <div class="heading">
        <div style="display:flex;align-items: center;">
          <img src="/images/logo.png" width="80">
          <div class="headingstyle">Food List</div>
        </div>
        <div style="margin-left: auto;">
          <a href="/food/food_interface"><img src="/images/add.png" class="addpic"></a>
        </div>
      </div>
      <table class="table" >
        <tr>
          <th>Sn</th>
          <th>Food Id</th>
          <th>Category</th>
          <th>Food Name</th>
          <th>Ingredients</th>
          <th>Description</th>
          <th>Price</th>
          <th>Status</th>
          <th>Picture</th>
          <th>Edit</th>
        </tr>
        <% data.map((item, i)=> { %>
          <tr>
            <td>
              <%= i + 1 %>
            </td>
            <td>
              <%= item.foodid %>
            </td>
            <td>
              <%= item.categoryname %><br>
                <%= item.subcategoryname %>
            </td>
            <td>
              <%= item.foodname %>
                <% if (item.foodtype=='Veg' ) { %>
                  <img src='/images/veg.png' class="vpic" />
                  <% } else { %>
                    <img src='/images/nonveg.png' class="vpic" />
                    <% } %>
            </td>
            <td>
              <%= item.ingredients %>
            </td>
            <td>
              <%= item.description %>
            </td>
            <td>


              <s> &#8377;<%= (item.price) %></s><br>

              &#8377;<%= item.offerprice %>
            </td>
            <td>
              <%= item.status %>
            </td>

            <td><a href="/food/show_picture?foodid=<%=item.foodid %>&foodname=<%=item.foodname %>&foodpicture=<%=item.foodpicture %>"><img src='/images/<%=item.foodpicture %>' class="pic" /></a></td>
            <td><a href="/food/show_food?foodid=<%=item.foodid %>"><button type="button"class="btn btn-warning">Update</button></a>
            </td>
          </tr>
          <% }) %>

    </div>
    </table>
  </div>
  </div>
</body>

</html>