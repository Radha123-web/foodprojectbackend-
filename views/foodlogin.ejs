<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Login</title>
  <style>
    body {
      margin: 0;
      font-family: "Poppins", sans-serif;
      background-color: #f5f5f5;
    }

    .maincontainer {
      background-image: url('images/background.png');
      background-size: cover;
      background-position: center;
      width: 100%;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      animation: fadeIn 2s ease-in-out;
    }

    .box {
      width: 80%;
      height: 80%;
      background: #fff;
      border-radius: 10px;
      display: flex;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      animation: slideUp 1.5s ease-in-out;
    }

    .left {
      width: 50%;
      background-color: #e2dede;
    }

    .left img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .right {
      width: 50%;
      position: relative;
      background-image: url('/images/bg.png');
      background-size: cover;
      background-position: center;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .container {
      width: 80%;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      z-index: 2;
      animation: fadeIn 2s ease-in-out;
    }

    .container img {
      height: 50px;
      width: 50px;
      margin-bottom: 20px;
      transition: transform 0.4s ease-in-out;
    }

    .container img:hover {
      transform: scale(1.1);
    }

    .container input {
      width: 75%;
      margin-top: 15px;
      padding: 10px;
      transition: all 0.4s ease-in-out;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .container input:focus {
      border-color: #ffcc00;
      box-shadow: 0 0 5px #ffcc00;
    }

    .btn-warning {
      width: 75%;
      padding: 10px;
      transition: all 0.4s ease-in-out;
      font-weight: bold;
      border-radius: 5px;
    }

    .btn-warning:hover {
      background-color: #ffcc00;
      color: #000;
      transform: scale(1.05);
      box-shadow: 0 5px 10px rgba(255, 204, 0, 0.3);
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes slideUp {
      from {
        transform: translateY(60px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    @media (max-width: 900px) {
      .hidden {
        display: none;
      }

      .right {
        width: 100%;
      }
    }
  </style>

  <!-- Fonts and Bootstrap -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <form action="/admin/check_login" method="post">
    <div class="maincontainer">
      <div class="box">
        <div class="left hidden">
          <img src="/images/haldiram.png" alt="Haldiram">
        </div>
        <div class="right">
          <div class="container">
            <img src="/images/lock.png" alt="Lock">
            <h3>Admin Login</h3>

            <input required type="text" class="form-control"  style="justify-self: center;"placeholder="Email ID or Mobile No" name="emailid">
            <input required type="password" class="form-control"  style="justify-self: center;" placeholder="Password" name="password"><br>

            <button type="submit" class="btn btn-warning">Login</button>

            <!-- Message Section -->
            <div class="mt-3 text-danger">
              <% if (typeof message !== 'undefined') { %>
                <%= message %>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</body>
</html>
