<style>
    body {
        margin: 0;
    }

    .maincontainer {
        background: #c8d6e5;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "poppins";
    }

    .box {

        width: 60%;
        height: auto;
        background: #feb8ce;
        border-radius: 10px;
        padding: 15px;
    }

    .heading {
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    .headingstyle {
        margin-left: 10px;
        font-size: 18px;
        font-weight: bold;
    }

    .btncenter {
        display: felx;
        justify-content: center;
    }

    .btnsize {

        margin-top: 5px;
        width: 80%;

    }

    .addpic {
        width: 70px;
        height: 70px;
        border-radius: 10px;
    }
</style>








<html>

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/project.js"></script>
</head>

<form action="/movie/submit_movie" method="post" enctype="multipart/form-data">
    <div class="maincontainer">
        <div class="box">
            <div class="row">
                <div class="col-12">
                    <div class="heading">
                        <div style="display:flex;align-items: center;">
                            <img src="/images/book.png" width="80">
                            <div class="headingstyle">Movie Booking</div>
                        </div>
                        <div style="margin-left: auto;">
                            <a href="/movie/display_all_movie"><img src="/images/cinema.png" class="addpic"></a>
                         </div>
                        </div>
                    </div>
                </div>




                <div class="row" style="margin-top: 10px;">
                    <div class="col-lg-12 col-lg-12 col-xs-12 " style="margin-bottom:5px;">
                        <input type="text" required class="form-control" name="moviename" id="moviename"
                            placeholder="moviename">

</div>
</div>




<div class="row" style="margin-top: 5px;">

    <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-bottom: 5px;">
        <input type="text" required class="form-control" name="director" id="director"
            placeholder="director">

    </div>

    <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-bottom: 10px;">
        <input type="text" required class="form-control" name="producer" id="producer"
            placeholder="producer">

    </div>

    <div class="col-xs-12 col-sm-12 col-lg-6" style="margin-bottom: 5px;">
        <input type="text" required class="form-control" name="musiccompany" id="musiccompany"
            placeholder=" musiccompany">

    </div>

    <div class="col-xs-12 col-sm-12 col-lg-1" style="margin-bottom: 4px;">

        <img id="fp">
    </div>
    <div class="col-xs-12 col-sm-12 col-lg-5" style="margin-top: 5px;">
        <input onchange="companypicture()" class="form-control" type="file" name="picture"
            id="picture">
    </div>










<div class="row" style="margin-top: 10px;">
    <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
        <input type="text" required class="form-control" name="actorsname" id="actorsname"
            placeholder="actorsname">
    </div>
    <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
        <input type="text" required class="form-control" name="actressname" id="actresssname"
            placeholder="actressname">
    </div>
    <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
        <input type="text" required class="form-control" name="musicdirector" id="musicdirector"
            placeholder="musicdirector">

    </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-bottom: 5px;">
                        <select required name="stateid" id="stateid" class="form-select">
                            <option selected>Select State</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-bottom: 5px;">
                        <select required name="cityid" id="cityid" class="form-select">
                            <option selected>Select City</option>
                        </select>
                    </div>
                </div>
                



                    
                        <div class="row" style="margin-top: 10px;">
                            <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-bottom: 5px;">
                                <select required name="cinemaid" id="cinemaid" class="form-select">
                                    <option selected>Select Cinema</option>
                                 
                                </select>
                            </div>


                            <div class="row" style="margin-top: 5px;">
                                <div class="col-xs-12 col-sm-12 col-lg-3" style="margin-bottom: 5px;">
                                    <select required name="screenid" id="screenid" class="form-select">
                                        <option selected>Select screen</option>
                                        
                                    </select>

                                </div>

                                <div class="col-xs-12 col-sm-12 col-lg-3" style="margin-bottom: 5px;">
                                    <input type="time" required class="form-control" name="time" id="time"
                                        placeholder="Time">

                                </div>
                                <div class="col-xs-12 col-sm-12 col-lg-1" style="margin-bottom: 5px;">

                                    <img id="mp">
                                </div>
                                <div class="col-xs-12 col-sm-12 col-lg-5" style="margin-top: 5px;">
                                    <input onchange="showPicture()" class="form-control" type="file" name="poster"
                                        id="poster">
                                </div>
                            </div>

                            <div class="row" style="margin-top: 25px;">
                                <div class="col-lg-6 col-sm-12 col-xs-12 btncenter">
                                    <button type="submit" class="btn btn-primary btnsize">Submit</button>
                                </div>


                                <div class="col-lg-6 col-sm-12 col-xs-12 btncenter">
                                    <button type="reset" class="btn btn-primary btnsize">Reset</button>
                                </div>
                            </div>

                            <div class="row" style="margin-top: 10px;">
                                <div class="col-lg-12 col-sm-12 col-xs-12 btncenter">
                                    <%=message %>

                                </div>
                            </div>
                        </div>
                    </div>
</form>

</html>