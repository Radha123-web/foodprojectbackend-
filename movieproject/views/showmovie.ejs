<html>

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/project.js"></script>
</head>

<form action="/movie/update_movie_data" method="post">
    <input type="hidden" value="<%=data.movieid %>"name= "movieid">
    <div class="maincontainer">
        <div class="box">
            <div class="row">
                <div class="col-12">
                    <div class="heading">
                        <div style="display:flex;align-items: center;">
                            <img src="/images/cinema.png" width="80">
                            <div class="headingstyle">Update Movie Booking</div>
                        </div>
                        <div style="margin-left: auto;">
                            <a href="/movie/display_all_movie"><img src="/images/icon.jpg" class="addpic"></a>
                         </div>
                        </div>
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-bottom: 5px;">
                        <select required name="stateid" id="stateid" class="form-select">
                            <option selected value ="<%=data.stateid %>"><%=data.statename %></option>
                        </select>
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-bottom: 5px;">
                        <select required name="cityid" id="cityid" class="form-select">
                          <option  selected value ="<%=data.cityid %>"><%=data.cityname %></option>
                        </select>
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    <div class="col-lg-12 col-lg-12 col-xs-12 " style="margin-bottom:5px;">
                        <input type="text"  value="<%=data.moviename %>" required class="form-control" name="moviename" id="moviename"
                            placeholder="moviename">

                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
                        <input type="text" value="<%=data.actorsname %>" required class="form-control" name="actorsname" id="actorsname"
                            placeholder="actorsname">
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
                        <input type="text" value="<%=data.actressname %>" required class="form-control" name="actressname" id="actresssname"
                            placeholder="actressname">
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
                        <input type="text"  value="<%=data.musicdirector %>"required class="form-control" name="musicdirector" id="musicdirector"
                            placeholder="musicdirector">

                    </div>


                    <div class="row" style="margin-top: 5px;">

                        <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
                            <input type="text"  value="<%=data.director %>"required class="form-control" name="director" id="director"
                                placeholder="director">

                        </div>

                        <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
                            <input type="text"  value="<%=data.producer %>"required class="form-control" name="producer" id="producer"
                                placeholder="producer">

                        </div>

                        <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
                            <input type="text"  value="<%=data.musiccompany %>"required class="form-control" name="musiccompany" id="musiccompany"
                                placeholder=" musiccompany">

                        </div>
                        <div class="row" style="margin-top: 10px;">
                            <div class="col-xs-12 col-sm-12 col-lg-12" style="margin-bottom: 5px;">
                                <select required name="cinemaid" id="cinemaid" class="form-select">
                                    <option selected value ="<%=data.cinemaid %>"><%=data.cinemaname %></option>
                                    
                                </select>
                            </div>


                            <div class="row" style="margin-top: 5px;">
                                <div class="col-xs-12 col-sm-12 col-lg-3" style="margin-bottom: 5px;">
                                    <select required name="screenid" id="screenid" class="form-select">
                                        <option selected value  ="<%=data.screenid %>"><%=data.screenname %></option>
                                        
                                    </select>

                                </div>

                                <div class="col-xs-12 col-sm-12 col-lg-3" style="margin-bottom: 5px;">
                                    <input type="text" value="<%=data.time %>" required class="form-control" name="time" id="time"
                                        placeholder="Time">

                                </div>
                                

                            <div class="row" style="margin-top: 25px;">
                                <div class="col-lg-6 col-sm-12 col-xs-12 btncenter">
                                    <button type="submit" name="btn" value="Edit"class="btn btn-primary btnsize">Edit</button>
                                </div>


                                <div class="col-lg-6 col-sm-12 col-xs-12 btncenter">
                                    <button type="submit" name="btn"  value="Delete"class="btn btn-primary btnsize">Delete</button>
                                </div>
                            </div>

                            <div class="row" style="margin-top: 10px;">
                                <div class="col-lg-12 col-sm-12 col-xs-12 btncenter">
                                    

                                </div>
                            </div>
                        </div>
                    </div>
</form>

</html>