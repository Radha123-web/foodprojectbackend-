<style>
    body {
        margin: 0;
    }

    .maincontainer {
        background: #edc4dd;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "poppins";
    }

    .box {

        width: 90%;
        height: auto;
        background: #92afa0;
        border-radius: 10px;
        padding: 15px;
    }

    .heading {
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    .headingstyle {
        margin-left: 10px;
        font-size: 18px;
        font-weight: bold;
    }

    .addpic {
        width: 50px;
        height: 50px;
        border-radius: 10px;
    }

    .pic {
        width: 80px;
        height: 60px;
        border-radius: 10px;
    }
</style>

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</head>
<html>

<body>
    <div class="maincontainer">
        <div class="box">
            <div class="heading">
                <div style="display:flex;align-items: center;">
                    <img src="/images/d.png" width="80">
                    <div class="headingstyle">Movie List</div>
                </div>
                <div style="margin-left: auto;">
                    <a href="/movie/movie_interface"><img src="/images/list.jpeg" class="addpic"></a>
                </div>
            </div>

            <table class="table">
                <tr>

                    <th>Sn</th>
                    <th>movieid</th>
                    <th>State</th>
                    <th>City</th>
                    <th>Moviename</th>
                    <th>Actorsname</th>
                    <th>Actressname</th>
                    <th>Musicdirector</th>
                    <th>Director</th>
                    <th>Producer</th>
                    <th>musiccompany</th>
                    <th>Cinema</th>
                    <th>Screen</th>
                    <th>Time</th>
                    <th>Poster</th>
                    <th>Edit</th>
                </tr>
                <% data.map((item,i)=> { %>
                    <tr>
                        <td>
                            <%=i+1 %>
                        </td>
                        <td>
                            <%=item.movieid %>
                        </td>
                        <td>
                            <%=item.statename %>
                              
                        </td>
                        <td>
                            <%=item.cityname %>
                        </td>
                        <td>
                            <%= item.moviename %>
                        </td>
                        <td>
                            <%= item.actorsname %>
                        </td>
                        <td>
                            <%= item.actressname %>
                        </td>
                        <td>
                            <%= item.musicdirector %>
                        </td>
                        <td>
                            <%= item.director %>
                        </td>
                        <td>
                            <%= item.producer %>
                        </td>
                        <td>
                            <%= item.musiccompany %>
                        </td>
                        <td>
                            <%= item.cinemaname %>
                        </td>
                        <td>
                            <%= item.screenname %>
                        </td>
                        <td>
                            <%= item.time %>
                        </td>


                        <td><a href="/movie/show_picture?movieid=<%=item.movieid %>&moviename=<%=item.moviename %>&poster=<%=item.poster %>"><img src='/images/<%=item.poster %>' class="pic" /></a></td>
                       <td><a href="/movie/show_movie?movieid=<%=item.movieid %>"><button type="button" class="btn btn-warning">Update</button>
                        </a>
                        </td>
                    </tr>
                    <% }) %>

        </div>
        </table>
    </div>
    </div>
</body>

</html>